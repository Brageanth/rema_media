---
import Facebook from "../assets/icons/facebook.svg";
import WhatsApp from "../assets/icons/whatsapp.svg";
import Instagram from "../assets/icons/instagram.svg";
const { icon } = Astro.props;

let Icon;

switch (icon) {
  case "facebook":
    Icon = Facebook;
    break;
  case "whatsapp":
    Icon = WhatsApp;
    break;
  default:
    Icon = Instagram;
}
---

<a
  class="rounded-full bg-white/20 text-white p-2 cursor-pointer hover:shadow-xl transition-shadow duration-350 ease-in-out"
  href={icon === "whatsapp" ? "https://wa.me/message/A74NR2E3K67XL1" : "https://www.instagram.com/rema_media_?igsh=aDZ1MDE5M2pjNmQx&utm_source=web"}
  target="_blank"
>
  <Icon class="lg:flex hidden" width={30} height={30} fill="white" />
  <Icon class="lg:hidden" width={20} height={20} fill="white" />
</a>
